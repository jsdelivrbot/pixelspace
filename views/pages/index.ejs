    Y: <input type="number" min="0" max="255" name="y"><br/>
    RGBA: <input type="number" min="0" max="255" step="1" name="r">
          <input type="number" min="0" max="255" step="1" name="g">
          <input type="number" min="0" max="255" step="1" name="b">
          <input type="number" min="0" max="1.0" step="0.01" value="1.0" name="a"><br/>
